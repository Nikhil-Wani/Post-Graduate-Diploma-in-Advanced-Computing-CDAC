<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>in.cdac.servlets.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>in.cdac.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>in.cdac.servlets.Welcome</servlet-class>
        <init-param>
            <param-name>DBConnector</param-name>
            <param-value>Oracle</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>in.cdac.servlets.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WelcomeAdmin</servlet-name>
        <servlet-class>in.cdac.servlets.Admin.WelcomeAdmin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/UserRegistration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/UserAuthentication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/Welcome</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>ProjectName</param-name>
        <param-value>Book Mgmgnt System</param-value>
    </context-param>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WelcomeAdmin</servlet-name>
        <url-pattern>/WelcomeAdmin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
